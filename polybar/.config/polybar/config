alert = ${xrdb:color7}
underline = ${xrdb:color5}

[bar/TCenter]
monitor = DP-0
width = 100%
height = 30
;offset-x = 1%
;offset-y = 1%
radius = 0.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

;line-size = 3
;line-color = #f00

