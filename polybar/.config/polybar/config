[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "cpu ~ "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #f90000
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
